<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>ie.baloot7.model.Category</class>
    <class>ie.baloot7.model.Comment</class>
    <class>ie.baloot7.model.Commodity</class>
    <class>ie.baloot7.model.Discount</class>
    <class>ie.baloot7.model.Provider</class>
    <class>ie.baloot7.model.Rating</class>
    <class>ie.baloot7.model.ShoppingItem</class>
    <class>ie.baloot7.model.User</class>
    <class>ie.baloot7.model.Vote</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Baloot7"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="rootroot"/>
    </properties>
  </persistence-unit>
</persistence>
